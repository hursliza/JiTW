    <title>All blogs</title>
	 <script type="text/javascript">
    	function printDate1(){
    		var d = new Date();	
    		if (d.getMonth()+1<10)
    			var mm="0"+(d.getMonth()+1);
    		else {
    			var mm=d.getMonth()+1;
    		}
    		if (d.getDay()<10)
    			var dd="0"+d.getDay(); 
    		else {
    			var mm=d.getDay();
    		}	
			document.getElementById('date1').value=d.getFullYear()+"-"+mm+"-"+dd;
    	}
    	function printTime1(){
    		var d = new Date(); 
			document.getElementById('time1').value=d.getHours()+":"+d.getMinutes();
    	}
    	function correctDate(){
			var date = document.getElementById('date1').value;
			var yyyy=date.slice(0, 4);
			var del1=date.slice(5, 1);
			var mm=date.slice(6, 2);
			var del2=date.slice(8, 1);
			var dd=date.slice(9, 2);
			if (del1!='-')
				del1='-';
			if (del2!='-')
				del2='-';
			if (yyyy<0 || mm > 12 || mm < 1 || dd > 31 || dd < 1){
				var d = new Date();
				yyyy=d.getFullYear();
				if (d.getMonth()+1<10)
    				var mm="0"+(d.getMonth()+1);
    			else {
    				mm=d.getMonth()+1;
    			}
    			if (d.getDay()<10)
    				dd="0"+d.getDay(); 
    			else {
    				mm=d.getDay();
    			}	
			}
			document.getElementById('date1').value=yyyy+del1+mm+del2+dd;				
    	}
    	function correctTime(){
			var date = document.getElementById('time1').value;
			var hh=date.slice(0, 2);
			var del1=date.slice(2, 1);
			var mm=date.slice(3, 2);
			if (del1!=':')
				del1=':';
			if (hh < 0 || hh > 24 || mm > 59 || mm < 0){
				var d = new Date();
				hh=d.getHours();
    			mm=d.getMinutes();
    			}	
			}
			document.getElementById('time1').value=hh+del1+mm;				
    	}
    </script>
</head>

